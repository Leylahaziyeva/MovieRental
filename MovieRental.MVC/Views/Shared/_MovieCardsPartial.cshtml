@model IEnumerable<MovieViewModel>
@foreach (var movie in Model)
{
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card m-card shadow-sm border-0">
            <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id">
                <div class="m-card-cover">
                    <div class="position-absolute bg-white shadow-sm-sm rounded text-center p-2 m-2 love-box">
                        <h6 class="text-gray-900 mb-0 font-weight-bold">
                            <i class="fas fa-heart text-danger"></i> @movie.LovePercentage%
                        </h6>
                        <small class="text-muted">@movie.VotesCount.ToString("N0")</small>
                    </div>
                    <img src="@movie.PosterImageUrl" class="card-img-top" alt="@movie.Title">
                </div>
                <div class="card-body p-3">
                    <h5 class="card-title text-white mb-1">@movie.Title</h5>
                    <p class="card-text">
                        <small class="text-white">@movie.LanguageName</small>
                        <small class="text-danger ml-2">
                            <i class="fas fa-calendar-alt fa-sm"></i>
                            @(movie.ReleaseDate != DateTime.MinValue ? movie.ReleaseDate.ToString("dd MMM") : "N/A")
                        </small>
                    </p>
                    @if (movie.Genres != null && movie.Genres.Any())
                    {
                        <p class="card-text mb-2">
                            <small class="text-muted">
                                @string.Join(", ", movie.Genres.Take(3).Select(g => g.Name))
                            </small>
                        </p>
                    }
                    <div class="d-flex justify-content-between align-items-center">
                        @if (movie.IsAvailableForRent)
                        {
                            <span class="badge badge-success">@movie.FormattedPrice</span>
                        }
                        else
                        {
                            <span class="badge badge-secondary">@localizer.GetValue("NotAvailable")</span>
                        }
                        @if (!string.IsNullOrEmpty(movie.Format))
                        {
                            <span class="badge badge-info">@movie.Format</span>
                        }
                        @if (movie.IsFeatured)
                        {
                            <span class="badge badge-warning">
                                <i class="fas fa-star"></i> @localizer.GetValue("Featured")
                            </span>
                        }
                    </div>
                </div>
            </a>
        </div>
    </div>
}