                    <a class="dropdown-item" href="/watchlist">
                        <i class="fas fa-heart fa-sm fa-fw mr-2 text-gray-400"></i>
                        @localizer.GetValue("Watchlist")
                    </a>
                    <a class="dropdown-item" href="/lists">
                        <i class="fas fa-list-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                        @localizer.GetValue("Your Lists")
                    </a>
                    <a class="dropdown-item" href="/account/settings">
                        <i class="fas fa-cog fa-sm fa-fw mr-2 text-gray-400"></i>
                        @localizer.GetValue("Account Settings")
                    </a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                        @localizer.GetValue("Logout")
                    </a>
                </div>
            </li>
        </ul>
    </div>
</nav>

