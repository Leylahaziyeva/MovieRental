@model HeaderViewModel

@inject ILanguageService LanguageService
@inject ICurrencyService CurrencyService
@inject ICookieService CookieService
@inject IRepositoryAsync<Logo> LogoRepository


@{
    var currentLanguage = await CookieService.GetLanguageAsync();
    var currentCurrency = await CookieService.GetCurrencyAsync();
    var currentLanguageId = currentLanguage?.Id ?? 1;
    var languages = await LanguageService.GetAllWithTranslationsAsync(currentLanguageId);
    var currencies = await CurrencyService.GetAllWithTranslationsAsync(currentLanguageId);
    var logo = (await LogoRepository.GetAllAsync(l => !l.IsDeleted))?.FirstOrDefault();
}

<!-- Top Navbar -->
<nav class="navbar navbar-expand navbar-dark topbar static-top shadow-sm bg-dark osahan-nav-top">
    <div class="container">
        <a class="navbar-brand" href="/">
            @if (!string.IsNullOrEmpty(logo?.LogoPath))
            {
                <img src="~/img/@logo.LogoPath" alt="Logo">
            }
            else
            {
                <span class="text-white font-weight-bold">@localizer.GetValue("Logo Not Found")</span>
            }
        </a>

        <!-- Search Form -->
        <form asp-controller="Movies" asp-action="Index" method="get" class="d-none d-sm-inline-block form-inline mr-auto my-2 my-md-0 mw-100 navbar-search">
            <div class="input-group">
                <input type="text" name="search" class="form-control bg-white border-0 small" placeholder="@localizer.GetValue("SearchForMoviesEventsSportsActivities...")"
                       aria-label="Search" aria-describedby="basic-addon2" autocomplete="off">
                <div class="input-group-append">
                    <button class="btn bg-white" type="submit">
                        <i class="fas fa-search fa-sm"></i>
                    </button>
                </div>
            </div>
        </form>

        <!-- Right Side Menu -->
        <ul class="navbar-nav ml-auto">
            <!-- Mobile Search Toggle -->
            <li class="nav-item dropdown no-arrow d-sm-none">
                <a class="nav-link dropdown-toggle" href="#" id="searchDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-search fa-fw"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right p-3 shadow-sm animated--grow-in" aria-labelledby="searchDropdown">
                    <form asp-controller="Movies" asp-action="Index" method="get" class="form-inline mr-auto w-100 navbar-search">
                        <div class="input-group">
                            <input type="text"
                                   name="search"
                                   class="form-control bg-light border-0 small"
                                   placeholder="Search for..."
                                   aria-label="Search"
                                   aria-describedby="basic-addon2"
                                   autocomplete="off">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </li>

            <!-- Language Dropdown -->
            <li class="nav-item dropdown no-arrow mx-1">
                <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-globe fa-fw"></i>
                    <span class="d-none d-lg-inline text-white small ml-1">@(currentLanguage?.IsoCode?.Substring(0, 2).ToUpper() ?? "EN")</span>
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow-sm animated--grow-in" aria-labelledby="languageDropdown">
                    <h6 class="dropdown-header">@localizer.GetValue("Select Language")</h6>
                    @if (languages != null && languages.Any())
                    {
                        foreach (var lang in languages)
                        {
                            <a class="dropdown-item @(currentLanguage?.Id == lang.Id ? "active" : "")"
                               href="@Url.Action("ChangeCulture", "Localizer", new { culture = lang.IsoCode })">
                                <img src="~/img/flags/@lang.ImageUrl" alt="@lang.Name" style="width: 20px; height: 15px;" class="mr-2">
                                @(lang.Name ?? lang.IsoCode)
                                @if (currentLanguage?.Id == lang.Id)
                                {
                                    <span class="badge badge-success ml-2">ACTIVE</span>
                                }
                            </a>
                        }
                    }
                    else
                    {
                        <a class="dropdown-item text-danger" href="#"><i class="fas fa-exclamation-triangle mr-2"></i>@localizer.GetValue("No languages available")</a>
                    }
                </div>
            </li>

            <!-- Currency Dropdown -->
            <li class="nav-item dropdown no-arrow mx-1">
                <a class="nav-link dropdown-toggle" href="#" id="currencyDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="d-none d-lg-inline text-white small">@(currentCurrency?.Symbol ?? "$") @(currentCurrency?.IsoCode?.ToUpper() ?? "USD")</span>
                    <span class="d-inline d-lg-none text-white">@(currentCurrency?.Symbol ?? "$")</span>
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow-sm animated--grow-in" aria-labelledby="currencyDropdown">
                    <h6 class="dropdown-header">@localizer.GetValue("Select Currency")</h6>
                    @if (currencies != null && currencies.Any())
                    {
                        foreach (var currency in currencies)
                        {
                            <a class="dropdown-item @(currentCurrency?.Id == currency.Id ? "active" : "")"
                               href="@Url.Action("ChangeCurrency", "Localizer", new { code = currency.IsoCode })">
                                <span class="mr-2">@currency.Symbol</span> @currency.IsoCode!.ToUpper() - @(currency.Name ?? currency.IsoCode)
                                @if (currentCurrency?.Id == currency.Id)
                                {
                                    <span class="badge badge-primary ml-2">ACTIVE</span>
                                }
                            </a>
                        }
                    }
                    else
                    {
                        <a class="dropdown-item text-warning" href="#"><i class="fas fa-database mr-2"></i>@localizer.GetValue("No currencies available")</a>
                    }
                </div>
            </li>

            <!-- Offers with NEW badge -->
            <li class="nav-item no-arrow mx-1">
                <a class="nav-link" href="/offers">
                    <i class="fas fa-fire fa-fw"></i>
                    <span class="badge badge-danger bg-gradient-danger">@localizer.GetValue("NEW")</span>
                </a>
            </li>

            <!-- Notifications -->
            <li class="nav-item dropdown no-arrow mx-1">
                <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-bell fa-fw"></i>
                    <span class="badge badge-danger badge-counter">8+</span>
                </a>
                <div class="dropdown-list dropdown-menu dropdown-menu-right shadow-sm animated--grow-in" aria-labelledby="alertsDropdown">
                    <h6 class="dropdown-header">@localizer.GetValue("Alerts")</h6>
                    <a class="dropdown-item d-flex align-items-center" href="#">
                        <div class="mr-3">
                            <div class="icon-circle bg-primary text-white">KN</div>
                        </div>
                        <div>
                            <div class="small text-gray-500">December 12, 2019</div>
                            <span class="font-weight-bold">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</span>
                        </div>
                    </a>
                    <a class="dropdown-item d-flex align-items-center" href="#">
                        <div class="dropdown-list-image mr-3">
                            <img class="rounded-circle w-60" src="~/img/s1.png" alt="">
                            <div class="status-indicator bg-success"></div>
                        </div>
                        <div>
                            <div class="text-truncate">Duis vel est sit amet ipsum egestas efficitur.</div>
                            <div class="small text-gray-500">Gurdeep Osahan · 58m</div>
                        </div>
                    </a>
                    <a class="dropdown-item d-flex align-items-center" href="#">
                        <div class="dropdown-list-image mr-3">
                            <img class="rounded-circle w-60" src="~/img/s2.png" alt="">
                            <div class="status-indicator"></div>
                        </div>
                        <div>
                            <div class="text-truncate">Pellentesque euismod diam sit amet nibh molestie, imperdiet feugiat mi feugiat.</div>
                            <div class="small text-gray-500">Jae Chun · 1d</div>
                        </div>
                    </a>
                    <a class="dropdown-item d-flex align-items-center" href="#">
                        <div class="dropdown-list-image mr-3">
                            <img class="rounded-circle w-60" src="~/img/s3.png" alt="">
                            <div class="status-indicator bg-warning"></div>
                        </div>
                        <div>
                            <div class="text-truncate">Quisque ac justo bibendum nunc fringilla pharetra nec sit amet mauris.</div>
                            <div class="small text-gray-500">Morgan Alvarez · 2d</div>
                        </div>
                    </a>
                    <a class="dropdown-item d-flex align-items-center" href="#">
                        <div class="mr-3">
                            <div class="icon-circle bg-success">
                                <i class="fas fa-donate text-white"></i>
                            </div>
                        </div>
                        <div>
                            <div class="small text-gray-500">December 7, 2019</div>
                            Sed aliquet nibh nec odio congue, in condimentum massa dapibus.
                        </div>
                    </a>
                    <a class="dropdown-item d-flex align-items-center" href="#">
                        <div class="mr-3">
                            <div class="icon-circle bg-warning">
                                <i class="fas fa-exclamation-triangle text-white"></i>
                            </div>
                        </div>
                        <div>
                            <div class="small text-gray-500">December 2, 2019</div>
                            Pellentesque sit amet nunc consectetur, porta sapien a, bibendum dolor.
                        </div>
                    </a>
                    <a class="dropdown-item text-center small text-gray-500" href="#">@localizer.GetValue("Show All Alerts")</a>
                </div>
            </li>

            <!-- User Profile -->
            <li class="nav-item dropdown no-arrow">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <!-- Logged In User -->
                    <a class="nav-link dropdown-toggle pr-0" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="mr-2 d-none d-lg-inline text-white small">@User.Identity.Name</span>
                        <img class="img-profile rounded-circle" style="width: 40px; height: 40px; object-fit: cover;"
                             src="~/img/user/@(string.IsNullOrEmpty(Model.Account?.ProfileImagePath) ? "default.png" : Model.Account.ProfileImagePath)">
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow-sm animated--grow-in" aria-labelledby="userDropdown">
                        <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                            <i class="fas fa-user-circle fa-sm fa-fw mr-2 text-gray-400"></i>
                            @localizer.GetValue("Profile")
                        </a>
                        <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                            <i class="fas fa-heart fa-sm fa-fw mr-2 text-gray-400"></i>
                            @localizer.GetValue("Watchlist")
                        </a>
                        <div class="dropdown-divider"></div>
                        <h6 class="dropdown-header">@localizer.GetValue("Settings")</h6>
                        <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                            <i class="fas fa-key fa-sm fa-fw mr-2 text-gray-400"></i>
                            @localizer.GetValue("ChangePassword")
                        </a>
                        <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                            <i class="fas fa-cog fa-sm fa-fw mr-2 text-gray-400"></i>
                            @localizer.GetValue("AccountSettings")
                        </a>
                        <div class="dropdown-divider"></div>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="dropdown-item">
                                <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                @localizer.GetValue("Logout")
                            </button>
                        </form>
                    </div>
                }
                else
                {
                    <!-- Guest User -->
                    <a class="nav-link dropdown-toggle pr-0" href="#" id="guestDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-user-circle fa-lg text-white"></i>
                        <span class="d-none d-lg-inline text-white small ml-2">@localizer.GetValue("Account")</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow-sm animated--grow-in" aria-labelledby="guestDropdown">
                        <h6 class="dropdown-header">@localizer.GetValue("Welcome")</h6>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Login">
                            <i class="fas fa-sign-in-alt fa-sm fa-fw mr-2 text-primary"></i>
                            @localizer.GetValue("Login")
                        </a>
                        <a class="dropdown-item" asp-controller="Account" asp-action="Register">
                            <i class="fas fa-user-plus fa-sm fa-fw mr-2 text-success"></i>
                            @localizer.GetValue("Register")
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item text-muted small" asp-controller="Account" asp-action="ForgotPassword">
                            <i class="fas fa-question-circle fa-sm fa-fw mr-2"></i>
                            @localizer.GetValue("ForgotPassword")
                        </a>
                    </div>
                }
            </li>
        </ul>
    </div>
</nav>

<!-- Bottom Navigation Menu -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark osahan-nav-mid">
    <div class="container">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Movie" asp-action="Index">
                    <i class="fas fa-fw fa-film"></i>
                    <span>@localizer.GetValue("Movies")</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Event" asp-action="Index">
                    <i class="fas fa-fw fa-glass-cheers"></i>
                    <span>@localizer.GetValue("Events")</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Person" asp-action="Index">
                    <i class="fas fa-fw fa-users"></i>
                    <span>@localizer.GetValue("People")</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Sport" asp-action="Index">
                    <i class="fas fa-fw fa-futbol"></i>
                    <span>@localizer.GetValue("Sports")</span>
                </a>
            </li>
        </ul>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Offer" asp-action="Index">@localizer.GetValue("Offers")</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="About" asp-action="Index">@localizer.GetValue("About")</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Contact" asp-action="Index">@localizer.GetValue("Contact")</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownBlog" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @localizer.GetValue("OtherPages")
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownBlog">
                        <a class="dropdown-item" href="/faq">@localizer.GetValue("FAQ")</a>
                        <a class="dropdown-item" href="/Views/Shared/404">@localizer.GetValue("404Page")</a>
                        <a class="dropdown-item" href="blank.html">@localizer.GetValue("BlankPage")</a>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</nav>