            <!-- Currency Dropdown -->
            <li class="nav-item dropdown no-arrow mx-1">
                <a class="nav-link dropdown-toggle" href="#" id="currencyDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="d-none d-lg-inline text-white small">@(currentCurrency?.Symbol ?? "$") @(currentCurrency?.IsoCode?.ToUpper() ?? "USD")</span>
                    <span class="d-inline d-lg-none text-white">@(currentCurrency?.Symbol ?? "$")</span>
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow-sm animated--grow-in" aria-labelledby="currencyDropdown">
                    <h6 class="dropdown-header">Select Currency</h6>
                    @if (currencies != null && currencies.Any())
                    {
                        foreach (var currency in currencies)
                        {
                            <a class="dropdown-item @(currentCurrency?.Id == currency.Id ? "active" : "")"
                               href="@Url.Action("ChangeCurrency", "Localizer", new { code = currency.IsoCode })">
                                <span class="mr-2">@currency.Symbol</span> @currency.IsoCode!.ToUpper() - @currency.Name
                            </a>
                        }
                    }
                    else
                    {
                        <a class="dropdown-item text-warning" href="#"><i class="fas fa-database mr-2"></i>@localizer.GetValue("No currencies available")</a>
                    }
                </div>
            </li>

            <!-- Offers with NEW badge -->
