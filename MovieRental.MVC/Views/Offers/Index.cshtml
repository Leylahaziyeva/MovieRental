@model OfferViewModel
@inject StringLocalizerManager localizer

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <img src="~/img/@Model.ImageUrl" class="card-img-top" alt="@Model.Title">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <img src="~/img/@Model.LogoUrl" class="rounded-circle mr-3" alt="@Model.Title" style="width: 60px; height: 60px;">
                        <h2 class="mb-0">@Model.Title</h2>
                    </div>
                    <div class="mb-4">
                        @if (Model.DiscountPercentage.HasValue)
                        {
                            <span class="badge badge-success badge-lg p-2 mr-2">
                                <i class="fas fa-percent"></i> @Model.DiscountPercentage%  @localizer.GetValue("Discount")
                            </span>
                        }
                        @if (Model.DiscountAmount.HasValue && !string.IsNullOrEmpty(Model.CurrencySymbol))
                        {
                            <span class="badge badge-info badge-lg p-2">
                                <i class="fas fa-money-bill-wave"></i> @Model.DiscountAmount @Model.CurrencySymbol  @localizer.GetValue("Discount")
                            </span>
                        }
                    </div>
                    <div class="offer-description">
                        <h5> @localizer.GetValue("AboutOffer")</h5>
                        <p class="text-muted">@Model.Description</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 sticky-top" style="top: 100px;">
                <div class="card-body p-4">
                    <h5 class="card-title"> @localizer.GetValue("OfferDetails")</h5>
                    <div class="mt-4">
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">
                                <i class="fas fa-calendar-check text-success"></i>
                                 @localizer.GetValue("StartDate")
                            </span>
                            <strong>@Model.ValidFrom.ToString("dd MMM yyyy")</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">
                                <i class="fas fa-calendar-times text-danger"></i>
                                 @localizer.GetValue("EndDate")
                            </span>
                            <strong>@Model.ValidTo.ToString("dd MMM yyyy")</strong>
                        </div>
                        @if (Model.DaysRemaining > 0)
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-clock"></i>
                                @localizer.GetValue("DaysRemaining", Model.DaysRemaining)
                            </div>
                        }
                    </div>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-block mt-3">
                        <i class="fas fa-arrow-left"></i>
                         @localizer.GetValue("BackToHome")
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>