@{
    ViewData["Title"] = localizer.GetValue("ForgotPasswordConfirmation");
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" type="image/png" href="~/img/logo-icon.png">
    <title>@ViewData["Title"] - @localizer.GetValue("Movbok")</title>
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/osahan.css" rel="stylesheet">
</head>
<body class="bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center align-items-center d-flex vh-100">
            <div class="col-xl-6 col-lg-8 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-5 text-center">
                        <div class="mb-4">
                            <i class="fas fa-envelope-open-text fa-4x text-primary"></i>
                        </div>
                        <h1 class="h4 text-gray-900 mb-4">@localizer.GetValue("CheckYourEmail")</h1>
                        <p class="text-muted mb-4">
                            @localizer.GetValue("PasswordResetEmailSentMessage")
                        </p>
                        <p class="text-muted small mb-4">
                            <i class="fas fa-info-circle mr-1"></i>
                            @localizer.GetValue("CheckSpamFolder")
                        </p>
                        <a class="btn btn-primary btn-user btn-block" asp-action="Login" asp-controller="Account">
                            <i class="fas fa-arrow-left mr-2"></i>@localizer.GetValue("BackToLogin")
                        </a>
                        <hr class="my-4">
                        <a class="small" asp-action="ForgotPassword" asp-controller="Account">
                            @localizer.GetValue("ResendEmail")
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>
</html>